#mod_rewrite documentation - http://httpd.apache.org/docs/2.0/mod/mod_rewrite.html#rewritecond


#Encoding for our site
AddDefaultCharset utf-8

#Set timezone
php_value date.timezone 'Europe/Kiev'

#Register globals flas
php_flag register_globals off

#Start page
DirectoryIndex index.php

#Redirect when errors code
ErrorDocument 400 /errors/errors.php
ErrorDocument 402 /errors/errors.php
ErrorDocument 403 /errors/errors.php
ErrorDocument 404 index.php
ErrorDocument 500 /errors/errors.php



#Lock file if in foler not index file
Options -Indexes

#RewriteEngine include
RewriteEngine  on

#Redirect all request to index.php
#RewriteRule ^.* index.php [L,QSA]

RewriteCond %{SCRIPT_FILENAME} !-f
RewriteCond %{SCRIPT_FILENAME} !-d

RewriteRule ^(.*)$ index.php [L]
